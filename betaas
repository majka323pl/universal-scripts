-- Sprawdź czy Orion się załadował
local OrionLib = loadstring(game:HttpGet("https://raw.githubusercontent.com/shlexware/Orion/main/source"))()

local Window = OrionLib:MakeWindow({
    Name = "Przykładowe GUI",
    HidePremium = false,
    SaveConfig = false
})

local Tab = Window:MakeTab({
	Name = "Główna",
	Icon = "rbxassetid://4483345998",
	PremiumOnly = false
})

Tab:AddButton({
	Name = "Wydrukuj wiadomość",
	Callback = function()
        OrionLib:MakeNotification({
            Name = "Kliknięto!",
            Content = "Witaj w Orion GUI!",
            Time = 3
        })
        print("Witaj w Orion GUI!")
	end
})

Tab:AddToggle({
	Name = "Przełącznik",
	Default = false,
	Callback = function(value)
        print("Przełącznik:", value)
	end
})

Tab:AddSlider({
	Name = "Slider",
	Min = 0,
	Max = 100,
	Default = 50,
	Callback = function(value)
        print("Slider:", value)
	end
})

Tab:AddTextbox({
	Name = "Wpisz coś",
	Default = "",
	TextDisappear = true,
	Callback = function(value)
        print("Wpisałeś:", value)
	end
})

Tab:AddDropdown({
	Name = "Wybierz opcję",
	Default = nil,
	Options = {"Opcja 1", "Opcja 2", "Opcja 3"},
	Callback = function(value)
        print("Wybrałeś:", value)
	end
})

Tab:AddButton({
	Name = "Zamknij GUI",
	Callback = function()
		OrionLib:Destroy()
	end
})

OrionLib:MakeNotification({
	Name = "Gotowe!",
	Content = "GUI Załadowane",
	Time = 5
})
